<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <form class="inv-add" action="/inv/add-classification" method="post">
  <fieldset>
    <legend>Add Classification</legend>
    <div class="form-group">
        <label for="classificationName">Classification Name</label>
        <input type="text" class="form-control" name="classification_name" id="classification_name" placeholder="Classification Name" required>
    </div>
    <div>
      <button class="button" type="submit">Add Classification</button>
  </div>
    </fieldset>
</form>