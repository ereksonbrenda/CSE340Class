<h1><%= title %></h1>
<%- messages() %>

<% 
if (errors) { 
%>

<ul class="notice">

<% 
    errors.array().forEach(error => { 
%>
    <li>
        <%= error.msg %>
    </li>
<%  
    }) 
%>
    
</ul>
<% 
}        
%>

<form class="inventory-add" action="/inventory/add-vehicle" method="post">
    <legend>Add Inventory</legend>
    <div class="form-group">        
        <select class="form-control" name="classification_id" id="classificationId" placeholder="Classification" required >
            <%
        if (classifications.length > 0) {
            classifications.forEach(classification => { 
    %> 
            <option value="<%- classification.classification_id %>"><%- classification.classification_name %></option>

    <%
            })
        }
    %>

        </select> 
        <input type="text" class="form-control" name="inv_make" id="invMake" placeholder="Make" required>
        <input type="text" class="form-control" name="inv_model" id="invModel" placeholder="Model" required>
        <input type="number" class="form-control" name="inv_year" id="invYear" placeholder="Year" required>        
        <input type="text" class="form-control" name="inv_color" id="invColor" placeholder="Color" required>
        <input type="number" class="form-control" name="inv_miles" id="invmiles" placeholder="Miles" required>
        <input type="number" class="form-control" name="inv_price" id="invPrice" placeholder="Price" required>
        <input type="text" class="form-control" name="inv_description" id="invDescription" placeholder="Description" required>
        <input type="text" class="form-control" name="inv_image" id="invImage" value="/images/vehicles/no-image.png" required>
        <input type="text" class="form-control" name="inv_thumbnail" id="invThumbnail" value="/images/vehicles/no-image-tn.png" required>
        
        <input type="submit" name="submit" id="addVehicle" value="Add Vehicle">   

    </div>

</form>