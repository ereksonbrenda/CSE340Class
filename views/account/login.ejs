<% 
if (title){ 
%>
    <h1><%= title %></h1>
<%- messages() %>

<% if (errors) { %>
<ul class="notice>
    <% errors.array().forEach(error => { %>
        <li>
            <%= error.msg %>
        </li>
        <% }) %>
        </ul>
        <% } %>

<form id="loginForm" action="/account/login" method="post">
    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" name="account_email" id="email" class="form-control" placeholder="Enter email" required value="<%= locals.account_email %>">
    </div>
    <div class="psswrd">
        <div class="require">
            <p>The password must have at least 8 characters, include 1 uppercase, 1 number, 1 symbol.</p>
        </div>
        <label for="password">Password</label>
        <input type="password" name="account_password" id="psswrd" class="form-group" placeholder="Enter your password" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{12,30}$">
    </div>

    <div>
    <button type="submit" class="btn btn-primary">Log in</button>
    <p>Don't have an account?</p>
    <a href="/account/register" class="reg">Register</a>
    </div>
</form>
<% 
} else 
    {
      res.redirect('/')

    } 
%>
